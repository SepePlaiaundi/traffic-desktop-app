<UserControl x:Class="TrafficDesktopApp.Controls.Dashboard.CamerasList"
             xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
             xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml">

    <Border Background="White"
            BorderBrush="#DDD"
            BorderThickness="1"
            CornerRadius="6"
            Padding="20">

        <Grid>
            <Grid.RowDefinitions>
                <RowDefinition Height="Auto"/>
                <RowDefinition Height="*"/>
            </Grid.RowDefinitions>

            <!-- Título -->
            <TextBlock Text="Cámaras"
                       FontSize="14"
                       FontWeight="SemiBold"
                       Margin="0,0,0,12"/>

            <!-- Lista -->
            <ListView Grid.Row="1"
                      ItemsSource="{Binding Cameras}"
                      BorderThickness="0"
                      Background="Transparent">

                <ListView.ItemTemplate>
                    <DataTemplate>
                        <Grid Margin="0,8">
                            <Grid.ColumnDefinitions>
                                <ColumnDefinition Width="40"/>
                                <ColumnDefinition Width="*"/>
                            </Grid.ColumnDefinitions>

                            <!-- Imagen -->
                            <Ellipse Width="36"
                                     Height="36">
                                <Ellipse.Fill>
                                    <ImageBrush ImageSource="{Binding Image}"/>
                                </Ellipse.Fill>
                            </Ellipse>

                            <!-- Texto -->
                            <StackPanel Grid.Column="1"
                                        Margin="12,0,0,0">
                                <TextBlock Text="{Binding CameraName}"
                                           FontWeight="SemiBold"/>
                                <TextBlock Text="{Binding Road}"
                                           FontSize="11"
                                           Foreground="#888"/>
                            </StackPanel>
                        </Grid>
                    </DataTemplate>
                </ListView.ItemTemplate>

            </ListView>

        </Grid>

    </Border>
</UserControl>
