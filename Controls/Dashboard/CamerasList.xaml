<UserControl x:Class="TrafficDesktopApp.Controls.Dashboard.CamerasList"
             xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
             xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml">

    <Border Style="{StaticResource CardBorder}">

        <Grid>
            <Grid.RowDefinitions>
                <RowDefinition Height="Auto"/>
                <RowDefinition Height="*"/>
            </Grid.RowDefinitions>

            <DockPanel Grid.Row="0" LastChildFill="False" Margin="0,0,0,12">
                <TextBlock Text="Cámaras"
                           FontSize="14"
                           FontWeight="SemiBold"
                           VerticalAlignment="Center"/>

                <Button Content="Ver más" 
                        Click="BtnViewMore_Click"
                        DockPanel.Dock="Right"
                        Style="{StaticResource LinkButton}"
                        VerticalAlignment="Center"
                        FontSize="12"/>
            </DockPanel>

            <ListView Grid.Row="1"
                      ItemsSource="{Binding Cameras}"
                      BorderThickness="0"
                      Background="Transparent"
                      ScrollViewer.HorizontalScrollBarVisibility="Disabled">
                <ListView.ItemTemplate>
                    <DataTemplate>
                        <Grid Margin="0,8">
                            <Grid.ColumnDefinitions>
                                <ColumnDefinition Width="40"/>
                                <ColumnDefinition Width="*"/>
                            </Grid.ColumnDefinitions>

                            <Ellipse Width="36" Height="36">
                                <Ellipse.Fill>
                                    <ImageBrush ImageSource="{Binding Image}" Stretch="UniformToFill"/>
                                </Ellipse.Fill>
                            </Ellipse>

                            <StackPanel Grid.Column="1" Margin="12,0,0,0">
                                <TextBlock Text="{Binding CameraName}" FontWeight="SemiBold"/>
                                <TextBlock Text="{Binding Road}" FontSize="11" Foreground="#888"/>
                            </StackPanel>
                        </Grid>
                    </DataTemplate>
                </ListView.ItemTemplate>
            </ListView>
        </Grid>
    </Border>
</UserControl>