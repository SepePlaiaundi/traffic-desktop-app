<UserControl x:Class="TrafficDesktopApp.Controls.Users.UsersListView"
             xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
             xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml">

    <Border Background="#FFF"
            CornerRadius="8"
            Padding="16">

        <ListView ItemsSource="{Binding VisibleUsers}"
                  BorderThickness="0"
                  Background="Transparent">

            <ListView.ItemTemplate>
                <DataTemplate>
                    <Border Margin="0,0,0,12"
                            Padding="12"
                            CornerRadius="6"
                            BorderBrush="#E5E5E5"
                            BorderThickness="1">

                        <Grid>
                            <Grid.ColumnDefinitions>
                                <ColumnDefinition Width="Auto"/>
                                <ColumnDefinition Width="*"/>
                                <ColumnDefinition Width="Auto"/>
                            </Grid.ColumnDefinitions>

                            <!-- Avatar -->
                            <Border Width="40"
                                    Height="40"
                                    CornerRadius="20"
                                    Background="#FFEDD5"
                                    VerticalAlignment="Center">
                                <TextBlock Text="{Binding NombreCompleto[0]}"
                                           FontWeight="Bold"
                                           Foreground="#EA580C"
                                           FontSize="16"
                                           HorizontalAlignment="Center"
                                           VerticalAlignment="Center"/>
                            </Border>

                            <!-- Info -->
                            <StackPanel Grid.Column="1"
                                        Margin="12,0"
                                        VerticalAlignment="Center">
                                <TextBlock Text="{Binding NombreCompleto}"
                                           FontWeight="SemiBold"
                                           Foreground="#111"/>
                                <TextBlock Text="{Binding Email}"
                                           FontSize="12"
                                           Foreground="#666"/>
                            </StackPanel>

                            <!-- AcciÃ³n -->
                            <Button Grid.Column="2"
                                    Content="Guardar"
                                    Padding="14,6"
                                    Background="#EA580C"
                                    Foreground="White"
                                    BorderThickness="0"
                                    Cursor="Hand"
                                    IsEnabled="{Binding HasChanges}"
                                    Click="SaveUser_Click">
                                <Button.Template>
                                    <ControlTemplate TargetType="Button">
                                        <Border Background="{TemplateBinding Background}"
                                                CornerRadius="4">
                                            <ContentPresenter
                                                HorizontalAlignment="Center"
                                                VerticalAlignment="Center"/>
                                        </Border>
                                    </ControlTemplate>
                                </Button.Template>
                            </Button>

                        </Grid>
                    </Border>
                </DataTemplate>
            </ListView.ItemTemplate>

        </ListView>
    </Border>
</UserControl>
