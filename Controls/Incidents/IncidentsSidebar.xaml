<UserControl x:Class="TrafficDesktopApp.Controls.Incidents.IncidentsSidebar"
             xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
             xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml">

    <Border Background="White"
            BorderBrush="#DDD"
            BorderThickness="1"
            CornerRadius="6"
            Padding="16">

        <StackPanel>

            <StackPanel Orientation="Horizontal" Margin="0,0,0,12">
                <Ellipse Width="10" Height="10"
                         Fill="#F5B400"
                         VerticalAlignment="Center"/>
                <TextBlock Text="Todas"
                        Margin="10,0,0,0"
                        FontWeight="SemiBold"
                        VerticalAlignment="Center"/>
            </StackPanel>

            <StackPanel Orientation="Horizontal" Margin="0,0,0,12">
                <Ellipse Width="10" Height="10"
                         Fill="#CCC"
                         VerticalAlignment="Center"/>
                <TextBlock Text="Obras"
                           Margin="10,0,0,0"
                           VerticalAlignment="Center"/>
            </StackPanel>

            <StackPanel Orientation="Horizontal" Margin="0,0,0,12">
                <Ellipse Width="10" Height="10"
                         Fill="#CCC"
                         VerticalAlignment="Center"/>
                <TextBlock Text="Accidentes"
                           Margin="10,0,0,0"
                           VerticalAlignment="Center"/>
            </StackPanel>

            <StackPanel Orientation="Horizontal">
                <Ellipse Width="10" Height="10"
                         Fill="#CCC"
                         VerticalAlignment="Center"/>
                <TextBlock Text="Otros"
                           Margin="10,0,0,0"
                           VerticalAlignment="Center"/>
            </StackPanel>

        </StackPanel>

    </Border>
</UserControl>
