<UserControl x:Class="TrafficDesktopApp.Controls.General.Header"
             xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
             xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml">

    <Border Background="White"
            BorderBrush="#E0E0E0"
            BorderThickness="0,0,0,1">

        <Grid Margin="24,0" Height="60">

            <Grid.ColumnDefinitions>
                <ColumnDefinition Width="Auto"/>
                <ColumnDefinition Width="*"/>
                <ColumnDefinition Width="Auto"/>
            </Grid.ColumnDefinitions>

            <!-- Navegación -->
            <StackPanel Orientation="Horizontal"
                        VerticalAlignment="Center">

                <StackPanel Cursor="Hand"
                            Margin="0,0,24,0"
                            MouseLeftButtonUp="Dashboard_Click">
                    <TextBlock x:Name="DashboardLink"
                               Text="Dashboard"
                               FontSize="14"/>
                    <Border x:Name="DashboardUnderline"
                            Height="3"
                            Width="24"
                            Background="Transparent"
                            Margin="0,6,0,0"/>
                </StackPanel>

                <StackPanel Cursor="Hand"
                            Margin="0,0,24,0"
                            MouseLeftButtonUp="Incidences_Click">
                    <TextBlock x:Name="IncidencesLink"
                               Text="Incidencias"
                               FontSize="14"/>
                    <Border x:Name="IncidencesUnderline"
                            Height="3"
                            Width="24"
                            Background="Transparent"
                            Margin="0,6,0,0"/>
                </StackPanel>

                <StackPanel Cursor="Hand"
                            Margin="0,0,24,0"
                            MouseLeftButtonUp="Cameras_Click">
                    <TextBlock x:Name="CamerasLink"
                               Text="Cámaras"
                               FontSize="14"/>
                    <Border x:Name="CamerasUnderline"
                            Height="3"
                            Width="24"
                            Background="Transparent"
                            Margin="0,6,0,0"/>
                </StackPanel>

                <StackPanel Cursor="Hand"
                            Margin="0,0,24,0"
                            MouseLeftButtonUp="Users_Click">
                    <TextBlock x:Name="UsersLink"
                               Text="Usuarios"
                               FontSize="14"/>
                    <Border x:Name="UsersUnderline"
                            Height="3"
                            Width="24"
                            Background="Transparent"
                            Margin="0,6,0,0"/>
                </StackPanel>
            </StackPanel>

            <!-- Logo -->
            <Image Grid.Column="1"
                   Source="/Assets/logo.png"
                   Height="40"
                   HorizontalAlignment="Center"
                   VerticalAlignment="Center"/>

            <!-- Avatar -->
            <Border Grid.Column="2"
                    Width="36"
                    Height="36"
                    CornerRadius="18"
                    BorderBrush="#DDD"
                    BorderThickness="1"
                    VerticalAlignment="Center">
                <Ellipse Fill="#CCC"/>
            </Border>

        </Grid>

    </Border>
</UserControl>
