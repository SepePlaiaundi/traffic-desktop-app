<UserControl x:Class="TrafficDesktopApp.Controls.General.Header"
             xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
             xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml">

    <Border Background="{DynamicResource SurfaceBrush}"
            BorderBrush="{DynamicResource BorderLightBrush}"
            BorderThickness="0,0,0,1">

        <Grid Margin="24,0" Height="70">

            <Grid.ColumnDefinitions>
                <ColumnDefinition Width="Auto"/>
                <ColumnDefinition Width="*"/>
                <ColumnDefinition Width="Auto"/>
            </Grid.ColumnDefinitions>

            <!-- Navegación -->
            <StackPanel Orientation="Horizontal"
                        VerticalAlignment="Center">

                <StackPanel Cursor="Hand"
                            Margin="0,0,24,0"
                            MouseLeftButtonUp="Dashboard_Click">
                    <TextBlock x:Name="DashboardLink"
                               Text="Dashboard"
                               FontSize="14"/>
                    <Border x:Name="DashboardUnderline"
                             Height="3"
                             Width="24"
                             Background="Transparent"
                             Margin="0,6,0,0"/>
                </StackPanel>

                <StackPanel Cursor="Hand"
                            Margin="0,0,24,0"
                            MouseLeftButtonUp="Incidences_Click">
                    <TextBlock x:Name="IncidencesLink"
                               Text="Incidencias"
                               FontSize="14"/>
                    <Border x:Name="IncidencesUnderline"
                             Height="3"
                             Width="24"
                             Background="Transparent"
                             Margin="0,6,0,0"/>
                </StackPanel>

                <StackPanel Cursor="Hand"
                            Margin="0,0,24,0"
                            MouseLeftButtonUp="Cameras_Click">
                    <TextBlock x:Name="CamerasLink"
                               Text="Cámaras"
                               FontSize="14"/>
                    <Border x:Name="CamerasUnderline"
                             Height="3"
                             Width="24"
                             Background="Transparent"
                             Margin="0,6,0,0"/>
                </StackPanel>

                <StackPanel Cursor="Hand"
                            Margin="0,0,24,0"
                            MouseLeftButtonUp="Users_Click">
                    <TextBlock x:Name="UsersLink"
                               Text="Usuarios"
                               FontSize="14"/>
                    <Border x:Name="UsersUnderline"
                             Height="3"
                             Width="24"
                             Background="Transparent"
                             Margin="0,6,0,0"/>
                </StackPanel>
            </StackPanel>

            <!-- Logo -->
            <Image Grid.Column="1"
                   Source="/Assets/logo.png"
                   Height="50"
                   HorizontalAlignment="Center"
                   VerticalAlignment="Center"/>
            <!-- Avatar -->
            <Border Grid.Column="2"
                    Width="36"
                    Height="36"
                    CornerRadius="18"
                    BorderBrush="{DynamicResource BorderLightBrush}"
                    BorderThickness="1"
                    VerticalAlignment="Center"
                    Cursor="Hand"
                    MouseLeftButtonUp="Avatar_Click"
                    Background="Transparent">
                
                <Border.ContextMenu>
                    
                    <ContextMenu x:Name="UserMenu" Placement="Bottom">
                        
                        <MenuItem Header="Mi Perfil" Click="Profile_Click"/>
                        <Separator/>
                        <MenuItem Header="Cerrar Sesión" Click="Logout_Click" Foreground="Red"/>
                        
                    </ContextMenu>
                    
                </Border.ContextMenu>

                <Grid>
                    <Ellipse Fill="{DynamicResource BorderLightBrush}"/>
                    
                    <TextBlock x:Name="UserInitials"
                               Text="U" 
                               HorizontalAlignment="Center" 
                               VerticalAlignment="Center" 
                               Foreground="{DynamicResource TextMutedBrush}" 
                               FontWeight="Bold"/>
                    
                    <Ellipse x:Name="UserAvatarEllipse" Visibility="Collapsed">
                        <Ellipse.Fill>
                            <ImageBrush x:Name="UserAvatarBrush" Stretch="UniformToFill"/>
                        </Ellipse.Fill>
                    </Ellipse>
                </Grid>
                
            </Border>

        </Grid>

    </Border>
</UserControl>
