<UserControl x:Class="TrafficDesktopApp.Controls.Incidences.IncidencesSidebar"
             xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
             xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml">

    <Border Background="White"
            BorderBrush="#DDD"
            BorderThickness="1"
            CornerRadius="6"
            Padding="16">

        <StackPanel>

            <StackPanel Orientation="Horizontal"
                        Margin="0,0,0,12"
                        MouseLeftButtonUp="All_Click">
                <Ellipse x:Name="AllDot" Width="10" Height="10" Fill="#F5B400"/>
                <TextBlock x:Name="AllText" Text="Todas" Margin="10,0,0,0"/>
            </StackPanel>

            <StackPanel x:Name="ItemsPanel"/>

        </StackPanel>
    </Border>
</UserControl>
