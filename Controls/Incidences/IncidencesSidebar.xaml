<UserControl x:Class="TrafficDesktopApp.Controls.Incidences.IncidencesSidebar"
             xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
             xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml">

    <Border Style="{StaticResource CardBorder}">

        <StackPanel>

            <StackPanel Orientation="Horizontal"
                        Margin="0,0,0,12"
                        MouseLeftButtonUp="All_Click">
                <Ellipse x:Name="AllDot" Width="10" Height="10" Fill="{DynamicResource AccentBrush}"/>
                <TextBlock x:Name="AllText" Text="Todas" Margin="10,0,0,0"/>
            </StackPanel>

            <StackPanel x:Name="ItemsPanel"/>

        </StackPanel>
    </Border>
</UserControl>
