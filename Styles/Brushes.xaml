<ResourceDictionary
    xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
    xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml">

    <SolidColorBrush x:Key="AppBackgroundBrush" Color="#F7F7F7"/>
    <SolidColorBrush x:Key="SurfaceBrush" Color="#FFFFFF"/>

    <SolidColorBrush x:Key="BorderLightBrush" Color="#E5E7EB"/>
    <SolidColorBrush x:Key="BorderMediumBrush" Color="#DDD"/>

    <SolidColorBrush x:Key="TextPrimaryBrush" Color="#111111"/>
    <SolidColorBrush x:Key="TextSecondaryBrush" Color="#6B7280"/>
    <SolidColorBrush x:Key="TextMutedBrush" Color="#999999"/>

    <SolidColorBrush x:Key="AccentBrush" Color="#F5B400"/>
    <SolidColorBrush x:Key="AccentHoverBrush" Color="#E5A800"/>

    <SolidColorBrush x:Key="HoverBackgroundBrush" Color="#F9FAFB"/>

    <SolidColorBrush x:Key="PrimaryBrush" Color="{DynamicResource PrimaryColor}"/>
    <SolidColorBrush x:Key="PrimaryHoverBrush" Color="{DynamicResource PrimaryHoverColor}"/>

    <SolidColorBrush x:Key="DangerBrush" Color="{DynamicResource DangerColor}"/>
    <SolidColorBrush x:Key="DangerBackgroundBrush" Color="{DynamicResource DangerBackgroundColor}"/>

    <SolidColorBrush x:Key="InputBorderHoverBrush" Color="{DynamicResource InputBorderHoverColor}"/>
    <SolidColorBrush x:Key="InputFocusBrush" Color="{DynamicResource InputFocusColor}"/>

    <SolidColorBrush x:Key="LinkBrush" Color="{DynamicResource LinkColor}"/>
    <SolidColorBrush x:Key="LinkHoverBrush" Color="{DynamicResource LinkHoverColor}"/>

    <SolidColorBrush x:Key="AvatarBackgroundBrush" Color="{DynamicResource AvatarBackgroundColor}"/>
    <SolidColorBrush x:Key="AvatarTextBrush" Color="{DynamicResource AvatarTextColor}"/>

</ResourceDictionary>
