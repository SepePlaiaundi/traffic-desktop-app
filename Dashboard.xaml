<Window x:Class="TrafficDesktopApp.Dashboard"
      xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
      xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
      Title="SEID - Dashboard"
      Width="1280"
      Height="800"
      Background="#F7F7F7" WindowStartupLocation="CenterScreen">

    <Grid>
        <Grid.RowDefinitions>
            <RowDefinition Height="60"/>
            <RowDefinition Height="*"/>
        </Grid.RowDefinitions>

        <Border Grid.Row="0"
                Background="White"
                BorderBrush="#DDD"
                BorderThickness="0,0,0,1">

            <Grid Margin="20,0">
                <Grid.ColumnDefinitions>
                    <ColumnDefinition Width="Auto"/>
                    <ColumnDefinition Width="*"/>
                    <ColumnDefinition Width="Auto"/>
                </Grid.ColumnDefinitions>

                <TextBlock Text="Panel de control"
                           VerticalAlignment="Center"
                           FontSize="16"
                           FontWeight="SemiBold"/>

                <Image Grid.Column="1"
                       Source="/Assets/logo.png"
                       Height="60"
                       HorizontalAlignment="Center"/>

                <Ellipse Grid.Column="2"
                         Width="32"
                         Height="32"
                         Fill="#CCC"
                         VerticalAlignment="Center"/>
            </Grid>
        </Border>

        <Grid Grid.Row="1" Margin="20">

            <Grid.RowDefinitions>
                <RowDefinition Height="Auto"/>
                <RowDefinition Height="*"/>
            </Grid.RowDefinitions>

            <Grid Grid.Row="0">
                <Grid.ColumnDefinitions>
                    <ColumnDefinition Width="*"/>
                    <ColumnDefinition Width="*"/>
                    <ColumnDefinition Width="*"/>
                </Grid.ColumnDefinitions>

                <Border Grid.Column="0"
                    Margin="0,0,15,0"
                    Padding="20"
                    Background="White"
                    CornerRadius="6"
                    BorderBrush="#DDD"
                    BorderThickness="1">    

                    <StackPanel>

                       <TextBlock Text="Incidencias hoy"
                           FontSize="13"
                           FontWeight="SemiBold"/>

                       <TextBlock Text="—"
                           FontSize="32"
                           FontWeight="Bold"
                           Margin="0,10,0,5"/>

                       <TextBlock Text="+ respecto al día anterior"
                           FontSize="11"
                           Foreground="Gray"/>

                    </StackPanel>

                </Border>

                <Border Grid.Column="1"
                    Margin="0,0,15,0"
                    Padding="20"
                    Background="White"
                    CornerRadius="6"
                    BorderBrush="#DDD"
                    BorderThickness="1">

                    <StackPanel>
                        
                        <TextBlock Text="Cámaras disponibles"
                            FontSize="13"
                            FontWeight="SemiBold"/>

                        <TextBlock Text="—"
                            FontSize="32"
                            FontWeight="Bold"
                            Margin="0,10,0,5"/>

                        <TextBlock Text="Última añadida —"
                            FontSize="11"
                            Foreground="Gray"/>
                        
                    </StackPanel>
                    
                </Border>

                <Border Grid.Column="2"
                    Padding="20"
                    Background="White"
                    CornerRadius="6"
                    BorderBrush="#DDD"
                    BorderThickness="1">

                    <StackPanel>
                        
                        <TextBlock Text="Usuarios"
                           FontSize="13"
                           FontWeight="SemiBold"/>

                        <TextBlock Text="—"
                           FontSize="32"
                           FontWeight="Bold"
                           Margin="0,10,0,5"/>

                        <TextBlock Text="Respecto al mes anterior"
                           FontSize="11"
                           Foreground="Gray"/>
                        
                    </StackPanel>
                    
                </Border>

            </Grid>

        </Grid>
    </Grid>
</Window>
