<Window x:Class="TrafficDesktopApp.Dashboard"
      xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
      xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
      xmlns:controls="clr-namespace:TrafficDesktopApp.Controls"
      Title="SEID - Dashboard"
      Width="1280"
      Height="800"
      Background="#F7F7F7" WindowStartupLocation="CenterScreen">

    <Grid>
        <Grid.RowDefinitions>
            <RowDefinition Height="60"/>
            <RowDefinition Height="*"/>
        </Grid.RowDefinitions>

        <controls:DashboardHeader Grid.Row="0"/>

        <Grid Grid.Row="1" Margin="20">

            <Grid.RowDefinitions>
                <RowDefinition Height="Auto"/>
                <RowDefinition Height="20"/>
                <RowDefinition Height="*"/>
            </Grid.RowDefinitions>

            <Grid Grid.Row="0">
                
                <Grid.ColumnDefinitions>
                    <ColumnDefinition Width="*"/>
                    <ColumnDefinition Width="*"/>
                    <ColumnDefinition Width="*"/>
                </Grid.ColumnDefinitions>

                <controls:DashboardCard
                    Grid.Column="0"
                    Margin="0,0,15,0"
                    Title="Incidencias hoy"
                    Value="—"
                    Subtitle="+ respecto al día anterior"/>

                <controls:DashboardCard
                    Grid.Column="1"
                    Margin="0,0,15,0"
                    Title="Cámaras disponibles"
                    Value="—"
                    Subtitle="Última añadida —"/>

                <controls:DashboardCard
                    Grid.Column="2"
                    Title="Usuarios"
                    Value="—"
                    Subtitle="Respecto al mes anterior"/>

            </Grid>

            <Border Grid.Row="2"
                Background="White"
                BorderBrush="#DDD"
                BorderThickness="1"
                CornerRadius="6"
                Padding="20">

                <Grid>
                    <Grid.RowDefinitions>
                        <RowDefinition Height="Auto"/>
                        <RowDefinition Height="*"/>
                    </Grid.RowDefinitions>

                    <TextBlock Text="Incidencias en el último día"
                       FontSize="14"
                       FontWeight="SemiBold"
                       Margin="0,0,0,12"/>

                    <controls:DashboardLineChart
                        Grid.Row="1"
                        Height="260"/>

                </Grid>

            </Border>

        </Grid>
    </Grid>
</Window>
