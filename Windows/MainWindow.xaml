<Window x:Class="TrafficDesktopApp.Windows.MainWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:TrafficDesktopApp"
        mc:Ignorable="d"
        Title="Seid" Height="500" Width="900" WindowStartupLocation="CenterScreen">
    <Grid>

        <StackPanel VerticalAlignment="Center"
                    HorizontalAlignment="Center">

            <Image Source="/Assets/logo.png"
                   Height="90"
                   Margin="0,0,0,40"
                   Stretch="Uniform"/>

            <Border Width="280"
                    Padding="20"
                    Background="White"
                    CornerRadius="6"
                    BorderBrush="#DDD"
                    BorderThickness="1">

                <StackPanel>

                    <TextBlock Text="Email"
                               FontSize="11"
                               Foreground="#666"/>

                    <TextBox Height="28"
                             Margin="0,4,0,12"
                             Background="#FAFAFA"
                             BorderBrush="#DDD"/>

                    <TextBlock Text="Contraseña"
                               FontSize="11"
                               Foreground="#666"/>

                    <PasswordBox Height="28"
                                 Margin="0,4,0,16"
                                 Background="#FAFAFA"
                                 BorderBrush="#DDD"/>

                    <Button Content="Entrar"
                            Height="32"
                            Background="#222"
                            Foreground="White"
                            BorderThickness="0"
                            Cursor="Hand"/>

                    <TextBlock Text="¿Has olvidado tu contraseña?"
                               FontSize="10"
                               Foreground="#777"
                               Margin="0,12,0,0"
                               TextAlignment="Center"/>

                </StackPanel>

            </Border>

        </StackPanel>

    </Grid>
</Window>
