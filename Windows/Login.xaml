<Window x:Class="TrafficDesktopApp.Windows.Login"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:TrafficDesktopApp"
        mc:Ignorable="d"
        Title="Seid" Height="500" Width="900" WindowStartupLocation="CenterScreen">
    <Grid>

        <StackPanel VerticalAlignment="Center" HorizontalAlignment="Center">

            <Image Source="/Assets/logo.png" Height="90" Margin="0,0,0,40" Stretch="Uniform"/>

            <Border Width="280" Style="{StaticResource CardBorder}">

                <StackPanel>
                    <TextBlock Text="Email" FontSize="11" Foreground="{DynamicResource TextSecondaryBrush}"/>

                    <TextBox x:Name="TxtEmail" Style="{StaticResource InputStyle}" Margin="0,4,0,12"/>

                    <TextBlock Text="Contraseña" FontSize="11" Foreground="{DynamicResource TextSecondaryBrush}"/>

                    <PasswordBox x:Name="TxtPassword" Style="{StaticResource InputStyle}" Margin="0,4,0,16"/>

                    <TextBlock x:Name="TxtError" Foreground="{DynamicResource DangerBrush}" FontSize="11" Margin="0,0,0,10" 
                               TextAlignment="Center" Visibility="Collapsed"/>

                    <Button Content="Entrar" 
                            Style="{StaticResource DarkButton}"
                            Click="BtnLogin_Click"/>

                    <TextBlock Text="¿Has olvidado tu contraseña?" FontSize="10" Foreground="{DynamicResource TextMutedBrush}" 
                               Margin="0,12,0,0" TextAlignment="Center"/>
                </StackPanel>

            </Border>

        </StackPanel>

    </Grid>
</Window>