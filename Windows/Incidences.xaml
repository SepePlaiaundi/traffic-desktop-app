<Window x:Class="TrafficDesktopApp.Windows.Incidences"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:general="clr-namespace:TrafficDesktopApp.Controls.General"
        xmlns:controls="clr-namespace:TrafficDesktopApp.Controls.Incidences"
        Title="Incidencias"
        MinWidth="1100"
        MinHeight="720"
        WindowStartupLocation="CenterScreen"
        WindowState="Maximized">


    <!-- ===== MISMO STYLE QUE CAMERAS ===== -->


    <Grid>
        <Grid.RowDefinitions>
            <RowDefinition Height="70"/>
            <RowDefinition Height="50"/>
            <RowDefinition Height="*"/>
        </Grid.RowDefinitions>

        <general:Header x:Name="Header" Grid.Row="0" Title="Incidencias"/>

        <!-- TOGGLER -->
        <Border Grid.Row="1" Background="{DynamicResource SurfaceBrush}" BorderBrush="{DynamicResource BorderLightBrush}" BorderThickness="0,0,0,1">
            <Grid Margin="24,0">
                <StackPanel Orientation="Horizontal" VerticalAlignment="Center">
                    <Border Background="{DynamicResource AppBackgroundBrush}" CornerRadius="18" Padding="3" Height="36">
                        <StackPanel Orientation="Horizontal">
                            <RadioButton x:Name="BtnList"
                                     Content="LISTA"
                                     Style="{StaticResource SegmentedRadioButtonStyle}"
                                     IsChecked="True"
                                     MinWidth="110"
                                     Click="SwitchView_Click"/>

                            <RadioButton x:Name="BtnMap"
                                     Content="MAPA"
                                     Style="{StaticResource SegmentedRadioButtonStyle}"
                                     MinWidth="110"
                                     Click="SwitchView_Click"/>
                        </StackPanel>
                    </Border>
                </StackPanel>
                <Button Style="{StaticResource RefreshButtonStyle}" 
                        Content="Actualizar Datos"
                        HorizontalAlignment="Right"
                        Click="Refresh_Click"/>
            </Grid>
        </Border>

        <!-- CONTENIDO -->
        <Grid Grid.Row="2" Margin="20">
            <Grid.ColumnDefinitions>
                <ColumnDefinition Width="220"/>
                <ColumnDefinition Width="20"/>
                <ColumnDefinition Width="*"/>
            </Grid.ColumnDefinitions>

            <controls:IncidencesSidebar x:Name="Sidebar" Grid.Column="0"/>

            <controls:IncidencesListView x:Name="IncidentsList"
                                     Grid.Column="2"
                                     Visibility="Visible"/>

            <controls:IncidencesMapView x:Name="IncidentsMap"
                                    Grid.Column="2"
                                    Visibility="Collapsed"/>
        </Grid>
    </Grid>

</Window>
