<Window x:Class="TrafficDesktopApp.Windows.Cameras"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:general="clr-namespace:TrafficDesktopApp.Controls.General"
        xmlns:controls="clr-namespace:TrafficDesktopApp.Controls.Cameras"
        Title="SEID - Control de Cámaras"
        MinWidth="1100"
        MinHeight="720"
        WindowStartupLocation="CenterScreen"
        WindowState="Maximized">




    <Grid>
        <Grid.RowDefinitions>
            <RowDefinition Height="70"/>
            <RowDefinition Height="50"/>
            <RowDefinition Height="*"/>
        </Grid.RowDefinitions>

        <general:Header x:Name="Header" Grid.Row="0"/>

        <Border Grid.Row="1" Background="{DynamicResource SurfaceBrush}" BorderBrush="{DynamicResource BorderLightBrush}" BorderThickness="0,0,0,1">
            <Grid Margin="24,0">
                <StackPanel Orientation="Horizontal" VerticalAlignment="Center">

                    <Border Background="{DynamicResource AppBackgroundBrush}" CornerRadius="18" Padding="3" Height="36">
                        <StackPanel Orientation="Horizontal">
                            <RadioButton x:Name="BtnGrid" 
                                 Content="CUADRÍCULA" 
                                 Style="{StaticResource SegmentedRadioButtonStyle}" 
                                 IsChecked="True" 
                                 MinWidth="110"
                                 Click="SwitchView_Click"/>

                            <RadioButton x:Name="BtnMap" 
                                 Content="MAPA" 
                                 Style="{StaticResource SegmentedRadioButtonStyle}" 
                                 MinWidth="110"
                                 Click="SwitchView_Click"/>
                        </StackPanel>
                    </Border>

                    <TextBlock Text="Vista de monitoreo" 
                       VerticalAlignment="Center" 
                       Margin="15,0,0,0" 
                       Foreground="#999" 
                       FontSize="11" 
                       FontWeight="Medium"/>
                </StackPanel>

                <Button Style="{StaticResource RefreshButtonStyle}" 
                        Content="Actualizar Datos"
                        HorizontalAlignment="Right"
                        Click="Refresh_Click"/>
            </Grid>
        </Border>

        <Grid Grid.Row="2">
            <controls:CamerasGridView x:Name="CamerasGrid" Visibility="Visible" Padding="20"/>
            <controls:CamerasMapView x:Name="CamerasMap" Visibility="Collapsed" />
        </Grid>
    </Grid>
</Window>